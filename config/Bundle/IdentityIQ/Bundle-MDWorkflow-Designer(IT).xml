<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE Bundle PUBLIC "sailpoint.dtd" "sailpoint.dtd">
<Bundle displayName="MDWorkflow Designer IT Role" name="MDWorkflow Designer IT Role" type="it">
  <Attributes>
    <Map>
      <entry key="acceleratorPackEnabled"/>
 <entry key="accountSelectorRules">
        <value>
          <AccountSelectorRules>
            <ApplicationAccountSelectorRules>
              <ApplicationAccountSelectorRule>
                <ApplicationRef>
                  <Reference class="sailpoint.object.Application" name="%%LDAP_APP_NAME%%"/>
                </ApplicationRef>
                <RuleRef>
                  <Reference class="sailpoint.object.Rule" name="Clorox Primary LDAP Account Selector Rule"/>
                </RuleRef>
              </ApplicationAccountSelectorRule>
            </ApplicationAccountSelectorRules>
          </AccountSelectorRules>
        </value>
      </entry>      
      <entry key="additionalRoleBusApprovalRule"/>
      <entry key="additionalRoleBusApprovers"/>
      <entry key="allApprovers"/>
      <entry key="allowDuplicateAccounts" value="false"/>
      <entry key="allowMultipleAssignments" value="false"/>
      <entry key="apaccountType"/>
      <entry key="appName" value="%%MDWORKFLOW_APP_NAME%%"/>
      <entry key="autoAssignEnablerTypes"/>
      <entry key="businessSubprocessName"/>
      <entry key="defaultEndDateSpan"/>
      <entry key="defaultStartDateSpan"/>
      <entry key="enablerTypes"/>
      <entry key="formappName"/>
      <entry key="isBirthright"/>
      <entry key="mandatoryEntitlements"/>
      <entry key="mandatoryRoles"/>
      <entry key="mergeTemplates" value="false"/>
      <entry key="noStartEndDatesAfterDateIdentityAttribute"/>
      <entry key="roleBusApprovalRule"/>
      <entry key="roleBusApprovers"/>
      <entry key="roleKeywords"/>
      <entry key="rolePrivileged"/>
      <entry key="sapVcbr">
        <value>
          <Boolean></Boolean>
        </value>
      </entry>
      <entry key="singleRoleRequest"/>
      <entry key="sysDescriptions">
        <value>
          <Map>
            <entry key="en_US" value="This role gives access to the Master Data Workflow for Designer&lt;br>"/>
          </Map>
        </value>
      </entry>
    </Map>
  </Attributes>
  <Inheritance>
    <Reference class="sailpoint.object.Bundle" name="MDWorkflow"/>
  </Inheritance>
  <Owner>
    <Reference class="sailpoint.object.Identity" name="%%CLX_AR_MDWorkflow_OWNER_WORKGROUP%%"/>
  </Owner>
  <Profiles>
    <Profile>
      <ApplicationRef>
        <Reference class="sailpoint.object.Application" name="%%MDWORKFLOW_APP_NAME%%"/>
      </ApplicationRef>
      <Constraints>
        <Filter operation="EQ" property="Role" value="MDWorkflow Designer"/>
      </Constraints>
    </Profile>
    <Profile>
      <ApplicationRef>
        <Reference class="sailpoint.object.Application"  name="%%LDAP_APP_NAME%%"/>
      </ApplicationRef>
      <Constraints>
        <Filter operation="CONTAINS_ALL" property="groups">
          <Value>
            <List>
              <String>%%MDWORKFLOW_LDAP_GROUPNAME%%</String>
            </List>
          </Value>
        </Filter>
      </Constraints>
    </Profile>    
  </Profiles>
</Bundle>
